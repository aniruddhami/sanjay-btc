<div class="container" style="max-width: 500px">
  <form class="form-group">
    <center>
    	<span class="form">
    		<h1>Get in touch</h1>
    	</span>
    </center>
    <div class="form-group" data-validate="Name is required">
      <input class="form-control" type="text" name="name" placeholder="Name" style="border-radius: 25px;background-color: rgb(216,216,216)" required="true">
      <span class="shadow-input1"></span>
    </div>
    <div class="form-group" data-validate="Valid email is required: ex@abc.xyz">
      <input class="form-control" type="email" name="email" placeholder="Email" style="border-radius: 25px;background-color: rgb(216,216,216)" required="true">
      <span class="shadow-input1"></span>
    </div>
    <div class="form-group" data-validate="Subject is required">
      <input class="form-control" type="text" name="subject" placeholder="Subject" style="border-radius: 25px;background-color: rgb(216,216,216)" required="true">
      <span class="shadow-input1"></span>
    </div>
    <div class="form-group" data-validate="Message is required">
      <textarea class="form-control" name="message" placeholder="Message" style="border-radius: 25px;background-color: rgb(216,216,216)" required="true">
      </textarea>
      <span class="shadow-input1"></span>
    </div>
    <div class="form-group">
      <center><button class="btn btn-primary">
          <span>
							Send Email
							<i class="fa fa-long-arrow-right" aria-hidden="true"></i>
						</span>
        </button>
      </center>
    </div>
  </form>
</div>